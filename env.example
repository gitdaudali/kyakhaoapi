# Database Configuration
DB_NAME=cup_streaming
DB_USER=postgres
DB_PASSWORD=root123
DB_HOST=localhost
DB_PORT=5432

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=1

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
BASE_URL=http://localhost:8000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS S3 Configuration (optional - add your credentials)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_CUSTOM_DOMAIN=your-custom-domain

# Email Configuration (optional - add your SMTP settings)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true
# SMTP_SSL=false
# FROM_EMAIL=your-email@gmail.com
# FROM_NAME=Cup Streaming
# EMAILS_ENABLED=false

# Google OAuth Configuration (optional)
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
# GOOGLE_OAUTH_ENABLED=false

# CORS Configuration
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://localhost:8000,http://localhost:8001

# File Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv,wmv,webm
UPLOAD_DIR=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT=5/minute
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0

# Video Processing
VIDEO_PROCESSING_QUEUE=video_processing
THUMBNAIL_SIZE=320,240

# Cache
CACHE_TTL=300
