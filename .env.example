# Cup Streaming FastAPI Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED VALUES - Update these with your actual values
# =============================================================================

# Basic settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security - REQUIRED: Change these in production!
SECRET_KEY=cup-streaming-secret-key-2024-very-secure-key-for-jwt-tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=1

# Database - REQUIRED: Update with your database credentials
DB_NAME=cup_streaming
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# Redis - REQUIRED: Update with your Redis URL
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OPTIONAL VALUES - Leave empty if not needed
# =============================================================================

# AWS S3 - Optional: Leave empty if not using S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=
S3_CUSTOM_DOMAIN=

# CORS - Optional: Add your frontend URLs
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://localhost:8000,http://localhost:8001

# File upload
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv,wmv,webm
UPLOAD_DIR=uploads

# Email - Optional: Leave empty if not using email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=Cup Streaming <noreply@cupstreaming.com>

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache
CACHE_TTL=300

# Video processing
VIDEO_PROCESSING_QUEUE=video_processing
THUMBNAIL_SIZE=320,240
